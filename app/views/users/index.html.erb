<h1>Users#index</h1>
<p>Find me in app/views/users/index.html.erb</p>

<p id="notice"><%= notice %></p>

<h1>User List</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Nickname</th>
      <th>Admin?</th>
      <th>Nickname</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |u| %>
      <tr>
        <td><%= u.email %></td>
        <td><%= u.nickname %></td>
        <td><%= u.is_admin %></td>
        <td><%= u.nickname %></td>
        <td><%= link_to 'View ', u %>|</td>
        <td><%= link_to ' Edit ', edit_user_path(u) %> |</td>
        <td><%= link_to ' Delete', u, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
